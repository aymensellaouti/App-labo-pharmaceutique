{% extends '::base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/site/css/jquery.simple-dtpicker.css') }}"/>
{% endblock %}
{% block header %}Medecin{% endblock %}
{% block header1 %}Nouveau{% endblock %}
{% block body -%}
    <form action="{{ path('medecin_create') }}" method="post">
        <div class="row">
            <div class="col-md-6">
                <div class="box box-primary">
                    <div class="box-header">
                        {{ form_errors(form) }}
                        <table class="table">
                            <tr>
                                <td>{{ form_label(form.nom) }}</td>
                                <td>{{ form_widget(form.nom, {'attr' : { 'class':'form-control'} }) }}</td>
                            </tr>
                            <tr>
                                <td>{{ form_label(form.prenom) }}</td>
                                <td>{{ form_widget(form.prenom, {'attr' : { 'class':'form-control'} }) }}</td>
                            </tr>
                            <tr>
                                <td>{{ form_label(form.sexe) }}</td>
                                <td>{{ form_widget(form.sexe, {'attr' : { 'class':'form-control'} }) }}</td>
                            </tr>
                            <tr>
                                <td>{{ form_label(form.age) }}</td>
                                <td>{{ form_widget(form.age, {'attr' : { 'class':'form-control'} }) }}</td>
                            </tr>
                            <tr>
                                <td>{{ form_label(form.tel) }}</td>
                                <td>{{ form_widget(form.tel, {'attr' : { 'class':'form-control'} }) }}</td>
                            </tr>
                            <tr>
                                <td>{{ form_label(form.fax) }}</td>
                                <td>{{ form_widget(form.fax, {'attr' : { 'class':'form-control'} }) }}</td>
                            </tr>
                            <tr>
                                <td>{{ form_label(form.siteWeb) }}</td>
                                <td>{{ form_widget(form.siteWeb, {'attr' : { 'class':'form-control'} }) }}</td>
                            </tr>
                            <tr>
                                <td>{{ form_label(form.secteur) }}</td>
                                <td>{{ form_widget(form.secteur, {'attr' : { 'class':'form-control'} }) }}</td>
                            </tr>
                            <tr>
                                <td></td>
                                <td><button type="submit" class="btn btn-success btn-block">Ajouter</button></td>
                            </tr>
                            {{ form(form) }}
                        </table>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="box box-primary">
                    <div class="box-header">
                        <div class="box-title">Spécialité</div>
                    </div>
                    <div class="box-body">
                        <table class="table">
                            <tbody class="no-border">
                            <tr>
                                <td>Etiquette</td>
                                <td>
                                    <select name="specialite" id="" class="form-control">
                                        <option value="x">X</option>
                                        <option value="y">y</option>
                                    </select>
                                </td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </form>
    <a href="{{ path('medecin') }}" class="btn btn-warning btn-block">
        Back to the list
    </a>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/site/js/jquery.simple-dtpicker.js') }}"></script>

    <script type="text/javascript">
        $(function(){
            $('.date_picker').appendDtpicker();
        });
    </script>
{% endblock %}