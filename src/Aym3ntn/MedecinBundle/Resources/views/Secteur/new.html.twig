{% extends '::base.html.twig' %}
{% block header %}Secteur{% endblock %}
{% block header1 %}Nouveau{% endblock %}
{% block body -%}
    <form action="{{ path('secteur_create') }}" method="post">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary">
                    <div class="box-header">
                        {{ form_errors(form) }}
                        <table class="table">
                            <tr>
                                <td>{{ form_label(form.nom) }}</td>
                                <td>{{ form_widget(form.nom, {'attr' : { 'class':'form-control'} }) }}</td>
                            </tr>
                            <tr>
                                <td>{{ form_label(form.region) }}</td>
                                <td>{{ form_widget(form.region, {'attr' : { 'class':'form-control'} }) }}</td>
                            </tr>
                            <tr>
                                <td>{{ form_label(form.description) }}</td>
                                <td>{{ form_widget(form.description, {'attr' : { 'class':'form-control'} }) }}</td>
                            </tr>
                            <tr>
                                <td>{{ form_label(form.user) }}</td>
                                <td>{{ form_widget(form.user, {'attr' : { 'class':'form-control'} }) }}</td>
                            </tr>
                            <tr>
                                <td></td>
                                <td><button type="submit" class="btn btn-success btn-block">Ajouter</button></td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </form>
    <a href="{{ path('secteur') }}" class="btn btn-warning btn-block">
        Revenir Ã  la liste des secteurs
    </a>

{% endblock %}