{% extends '::base.html.twig' %}
{% block header %}Notes{% endblock %}
{% block header1 %}Liste{% endblock %}
{% block body -%}
    <div class="row">
        <div class="col-md-12">
            <a href="{{ path('note_new') }}" class="btn btn-success margin-bottom">
                Ajouter une nouvelle note
            </a>
            <div class="box box-primary">
                <div class="box-header">
                    <table class="table">
                        <thead>
                        <tr>
                            <th>#</th>
                            <th>Description</th>
                            <th>Type</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for entity in entities %}
                            <tr>
                                <td><a href="{{ path('note_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                                <td>{{ entity.descr }}</td>
                                <td>{{ entity.type }}</td>
                                <td>
                                    <a href="{{ path('note_show', { 'id': entity.id }) }}" class="btn btn-primary">Afficher</a>
                                    <a href="{{ path('note_edit', { 'id': entity.id }) }}" class="btn btn-warning">Modifier</a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
